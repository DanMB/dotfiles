// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
	"restore_on_startup": "none",
	"base_keymap": "VSCode",
	"theme": {
		"mode": "system",
		"light": "Atelier Estuary Light",
		"dark": "XY-Zed"
	},
	"ui_font_size": 15,
	"buffer_font_size": 15,
	"buffer_font_family": "Fira Code",
	"ui_font_family": "Fira Mono",
	"calls": {
		"mute_on_join": true
	},
	"project_panel": {
		"button": false,
		"folder_icons": false,
		"indent_size": 15,
		"auto_fold_dirs": false
	},
	"collaboration_panel": {
		"button": false
	},
	"chat_panel": {
		"button": false
	},
	"assistant": {
		"default_model": {
			"provider": "copilot_chat",
			"model": "claude-3-5-sonnet"
		},
		"version": "2",
		"enabled": true,
		"button": true,
		"dock": "left"
	},
	"hard_tabs": true,
	"tab_size": 2,
	"journal": {
		"path": "~",
		"hour_format": "hour24"
	},
	"terminal": {
		// "shell": {
		// 	"program": "kitty"
		// },
		"dock": "right",
		"button": false
	},
	"notification_panel": {
		"button": false
	},
	"preview_tabs": {
		"enabled": false,
		"enable_preview_from_file_finder": false,
		"enable_preview_from_code_navigation": false
	},
	"formatter": "prettier",
	"prettier": {
		"allowed": true,
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "none",
		"printWidth": 100,
		"tabWidth": 2,
		"semi": true,
		"arrowParens": "always",
		"bracketSpacing": true,
		"embeddedLanguageFormatting": "auto",
		"htmlWhitespaceSensitivity": "css",
		"insertPragma": false,
		"jsxSingleQuote": true,
		"proseWrap": "preserve",
		"quoteProps": "as-needed",
		"requirePragma": false,
		"vueIndentScriptAndStyle": false,
		"plugins": ["prettier-plugin-svelte"],
		"overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }]
	},
	"file_types": {
		"HTML": [".svg"],
		"JSON": [".prettierrc"],
		"Git Ignore": [".prettierignore"]
	},
	"languages": {
		"Svelte": {
			"language_servers": ["svelte-language-server", "..."],
			"prettier": {
				"allowed": true,
				"plugins": ["prettier-plugin-svelte"],
				"parser": "svelte"
			}
		}
	}
}
